<div class="mx-auto bg-orange-50 p-5 rounded">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <p>
      <h2 class="text-center text-xl text-orange-500 bg-orange-200 p-3 font-semibold mb-3 rounded">Log in</h2>  
    </p>
    <div class="field">
      <%= f.label :email, class: "text-orange-500" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "text-orange-500" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "rounded" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "text-orange-500"  %>
      </div>
    <% end %>

    <div class="actions my-3">
      <%= f.submit "Log in", 
      class: "text-white text-xl bg-orange-400 
        p-2 w-full rounded cursor-pointer font-bold
        hover:text-orange-50 hover:bg-orange-500" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>

